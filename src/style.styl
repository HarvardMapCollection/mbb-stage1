body
    margin: 0
    border: 0
    font-family: loraregular
    font-weight: 400
    height: max-content
    line-height: 32px
    font-size: 19px


#wrapper 
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    display: flex
    flex-direction: column

header
    width: 100%
    background-color: #F3F3F3
    z-index: 10000000
    border-bottom: .05rem solid rgba(0, 0, 0, 0.1);

#header-logo
    padding: 2px 0 5px 10px
    color: white
    vertical-align: top
    display:flex
    flex-direction: row
    padding-top: 1rem;

#header-text    
    display:flex
    flex-direction: column
    padding-bottom:.5rem

#header-inner a 
    text-decoration:none
    color: #1E1E1E
    font-weight: 700
    font-size: 60px
    letter-spacing: 1px
    transition: color 0.2s 
    font-family: 'truenobold'
     
#header-inner a:hover
    text-decoration: underline


div#subtitle
    color: #646464
    font-size: 26px
    padding-left: .7rem
    font-family: 'loraitalic'



#logo
    height:auto
    max-width:60px
    position: relative
    margin-right: 1rem

#map
    width: 100%
    flex-grow: 1
    
img 
    max-width: 250px

a 
  color: #0579B8
  font-family: "truenobold"
  padding: 2px
  text-decoration: none


a:hover {
  text-decoration: underline
  text-decoration-color: #cee0ef  
  text-decoration-thickness: .2rem
  text-underline-offset: .15rem
}

#placeinfo
    margin-top:2rem

ul 
    padding-bottom:0
    margin-bottom:0

.geojson-Icon
    height: 5px
    width: 5px;
    background-color: #137CB9
    border-radius: 50%
    display: inline-block


.geojson-Icon-active
    height: 5px
    width: 5px
    background-color: #EC001B
    border-radius: 50%
    display: inline-block

.leaflet-control-layers-expanded
    font-family: loraregular
    font-weight: 400
    height: max-content
    line-height: 26px
    font-size: 15px

#sidebar-wrapper
    width: 30%
    height: 100%
    left: 0;
    position: absolute
    background-color: #F3F3F3
    z-index: 9999
    display:flex
    flex-direction: column
    position: absolute
    overflow:auto

#sidebar-text
    margin-top: 8rem;
    width:auto;
    padding-right:1rem;
    padding-left: 1rem;
    position: relative;

h1 {
  font-family: 'truenobold';
  color: #1E1E1E;
  line-height: 74px;
  font-size: 60px;
  margin:0;
}

h2{
  font-family: 'truenobold';
  color: #1E1E1E;
  font-size: 32px;
  text-transform: uppercase;
  line-height: 42px;
  letter-spacing: 2.4px;
}

h3{
  font-family: 'truenobold';
  color: #1E1E1E;
  font-size: 20px;
  text-transform: uppercase;
  line-height: 30px;
  letter-spacing: 1.5px;
}

h4{
  font-family: 'truenosemibold';
  color: #1E1E1E;
  font-size: 20px;
  text-transform: uppercase;
  line-height: 30px;
  letter-spacing: 2.14px;
}

h5{
  font-family: 'truenosemibold';
  color: #1E1E1E;
  font-size: 19px;
  line-height: 29px;
}

h6{
  font-family: 'truenosemibold';
  color: #1E1E1E;
  font-size: 16px;
  line-height: 28px;
}



@media only screen and (max-width: 992px) {
  h1{
    font-size: 32px;
    line-height: 40px;
  }
  h2{
    font-size: 24px;
    line-height:31px;
  }
  #header{
      display: flex;
      flex-direction: column;
  }
}



